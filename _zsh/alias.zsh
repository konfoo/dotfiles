alias l='gls -F --color'
alias la='gls -AF --color'
alias ll='gls -lF --color'
alias lla='gls -lAF --color'

# command aliases
alias vi="vim"
alias pd='popd'
alias zshload="source ~/.zshrc"
alias tmux='tmux -2'

# global aliases
alias -g H='| head'
