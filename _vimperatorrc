""""""" options """""""
" デフォルト検索エンジン
set defsearch=gj
set guioptions=br
" Exコマンドと検索パターン履歴の記録数
set history=1000
set verbose=9
" 常にタブを表示
set showtabline=2
" :[tab]open コマンドで補完する候補と順番
set complete=sl
" サイズ指定のポップアップは新規ウィンドウで開く
set popups=2
" ステータスバーにリンク先表示
set showstatuslinks=2
" ヘルプ等を別タブで開く
set newtab=help,prefs,addons
" input要素にfocusを奪われないようにする
set focuscontent


" ビープ音を鳴らさない
set visualbell
highlight Bell display:none

""""""" keymaps """""""
" scroll
"noremap J <C-f>
"noremap K <C-b>
"noremap j <Down>
""noremap k <Up>

" select, copy, cut & paste
noremap <C-c> <C-v><C-c>
noremap <C-x> <C-v><C-x>
noremap <C-v> <C-v><C-v>

" quick search
map o :open<Space>
map e :eijiro<Space>
map T :tabopen<Space>tw<Space>
map s :tabopen<Space>tw#<Space>

" .vimperatorrcを再読み込み(:restartしなくてもいい)
map ,s :so ~/.vimperatorrc<CR>

" bookmarklet
map ,h :bmlhatebu<CR>

"""""""" plugins """"""""
" ime_controller.js
let g:ex_ime_mode = "inactive"
let g:textarea_ime_mode = "active"

" migemo_hint.js  ""ヒントでMigemo検索可能に
set hintmatching=custom

" twitter.js
map ,t :twitter<Space>
map ,T :twitter!<Space>
map ,@ :twitter!@<CR>

" waditter.js
map ,w :waditter<CR>

" direct_bookmark.js
"let g:direct_sbm_use_services_by_tag = "d"
"let g:direct_sbm_use_services_by_post = "d"
"let g:direct_sbm_is_use_migemo = "true"

" ldrize_cooperation.js
let g:ldrc_captureMappings = "['j','k','p','o','?']"
let g:ldrc_hits = "true"
let g:ldrc_intelligence_bind = "true"
"let g:ldrc_skip = "0.15"

" _smooziee.js
let g:smooziee_scroll_amount = "50"
let g:smooziee_scroll_interval = "30" 
js <<EOM
mappings.addUserMap([modes.NORMAL], ["J"], "Page Down",
  function() plugins.smooziee.smoothScrollBy(content.innerHeight - 40)
  );
mappings.addUserMap([modes.NORMAL], ["K"], "Page Up",
  function() plugins.smooziee.smoothScrollBy((content.innerHeight - 40)*-1)
  );
EOM


" multi_requester.js

"""""""" websites """"""""
" gmail
autocmd LocationChange .* :fmapc
autocmd LocationChange 'mail\.google\.com/mail' :fmap -depth 4 c / j k n p o u e x s r a # [ ] z ? gi gs gt gd ga gc
" google reader
autocmd LocationChange .* js modes.passAllKeys = false
autocmd LocationChange www\\.google\\.(co\\.jp|com)/reader js modes.passAllKeys = true
" hatena bookmark
autocmd LocationChange .* :fmapc
autocmd LocationChange ^http://b\.hatena\.ne\.jp/konfoo :fmap j k o e b

"""""""" others """"""""
" 読み込んだ事を出力
echo ".vimperatorrc sourced"

" vim: set ft=vimperator:
