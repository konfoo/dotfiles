" _smooziee.js
let g:smooziee_scroll_amount = "70"
let g:smooziee_scroll_interval = "30" 
js <<EOM
mappings.addUserMap([modes.NORMAL], ["J"], "Page Down",
  function() plugins.smooziee.smoothScrollBy(content.innerHeight - 40)
  );
mappings.addUserMap([modes.NORMAL], ["K"], "Page Up",
  function() plugins.smooziee.smoothScrollBy((content.innerHeight - 40)*-1)
  );
EOM

" multi_requester.js
let g:multi_requester_default_sites = "alc"

"""""""" websites """"""""
" gmail
autocmd LocationChange .* :fmapc
autocmd LocationChange 'mail\.google\.com/mail' :fmap -depth 4 c / j k n p o u e x s r a # [ ] z ? gi gs gt gd ga gc
" google reader
autocmd LocationChange .* js modes.passAllKeys = false
autocmd LocationChange www\\.google\\.(co\\.jp|com)/reader js modes.passAllKeys = true
" hatena bookmark
autocmd LocationChange .* :fmapc
autocmd LocationChange ^http://b\.hatena\.ne\.jp/konfoo :fmap j k o e b

"""""""" others """"""""
" 読み込んだ事を出力
echo ".vimperatorrc sourced"

